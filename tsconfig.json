{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "locales/*": ["locales/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"],
      "types/*": ["types/*"],
      "features/*": ["features/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "react-router-dom": ["node_modules/react-router-dom"]
    }
  },
  "include": [
    "src/**/*"
, "src/__tests__/App.test.tsx"  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.js",
    "**/*.js"
  ]
}